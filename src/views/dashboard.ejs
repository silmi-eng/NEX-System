<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NEX-System</title>
    <link rel="stylesheet" href="/assets/main.css">
</head>

<body>
    <nav>
        <ul>
            <div class="logo"><a href="/home">NEX SYSTEM CLOUD</a></div>
            <div class="options">
                <div class="option"><img src="/assets/icons/not-connected-controller.png" id="status"></div>
                <div class="option users" style="cursor: pointer;"><img src="/assets/icons/user.png"></div>
            </div>
        </ul>
    </nav>

    <div class="container">
        <div class="container-header">
            <h2>All Games</h2>
            <p>A-z</p>
        </div>

        <div class="container-body">
            <% documents.forEach(doc=> { %>
                <div class="game-card" onclick="(() => { redirect('<%= doc.path %>') })()">
                    <img src="<%= doc.image %>">
                </div>
            <% }) %>
        </div>
    </div>

    <div class="user-settings hidden none">
        <div class="user-settings-popup">
            <div class="close"><img src="/assets/icons/close.png"></div>
            <div class="user-settings-options">
                <span class="user-settings-options-title">Settings</span>
                <span class="user-settings-option selected">Subscriptions</span>
                <span class="user-settings-option">User</span>
            </div>
    
            <div class="user-settings-body">
                <div class="details subscription">
                    <h2>Subscriptions</h2>
                </div>
                <div class="details user hidden">
                    <h2>User</h2>
                </div>
            </div>
        </div>
    </div>

    <script src="/controllers/dashboard.controller.js"></script>
</body>

</html>